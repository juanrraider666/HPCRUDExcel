{% set isLoggedUser = app.user and is_granted('IS_AUTHENTICATED_FULLY') %}
<div class="container-fluid bg-black">
    <div class="container">
        <div class="row">
            <div class="col-md-12 padding-0-xs">
                <div class="col-md-2 padding-0">
                    <a href="{{ isLoggedUser ? path('homepage') : path('fos_user_security_login') }}"><img src="{{ asset('theme/images/logo-partner.png') }}" alt="Logo Partner" class="partner {% if isLoggedUser %}partner-menu{% endif %}"></a>
                </div>

                {% if isLoggedUser %}
                    <div class="col-md-8 col-sm-9 padding-0 menu-toshiba">
                        <nav class="navbar-default">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-menu-ts" id="btn-responsive" aria-expanded="false">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <div class="collapse navbar-collapse padding-0" id="navbar-menu-ts">
                                {{ knp_menu_render('loyalty', {allow_safe_labels: true}) }}
                            </div>
                        </nav>
                    </div>
                {% endif %}

                <div class="logo-toshiba hidden-xs">
                    <a href="http://latin.toshiba.com/" target="_blank"> <img src="{{ asset('theme/images/logo-toshiba.png') }}" alt="logo Toshiba"></a>
                </div>
                <div class="visible-xs logo-toshiba-xs">
                    <a href="http://latin.toshiba.com/" target="_blank"> <img src="{{ asset('theme/images/logo-toshiba.png') }}" width="100" alt="Logo Toshiba"></a>
                </div>
            </div>

        </div>
    </div>
</div>